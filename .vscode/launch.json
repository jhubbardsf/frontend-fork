{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Next.js API Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev-debug"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Next.js Debug",
      "type": "node",
      "request": "attach",
      "port": 9230,
      "address": "localhost",
      "restart": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/.next/**/*.js"]
    }
  ]
}